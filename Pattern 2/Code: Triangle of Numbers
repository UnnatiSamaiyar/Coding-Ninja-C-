#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    
    for(int i =1; i<=n; i++){
        int p=i;
        for(int space=1; space<=(n-i); space++){
            cout<<' ';
        }
        for(int j=1; j<=i; j++){
            cout<<p;
            p++;
        }
        for(int k=((2*i)-2); k>i-1; k--){
            cout<<k;
        }
        cout<<endl;
    }
}
