#include<bits/stdc++.h>
using namespace std;
int main(){
    int n, c;
    cin>>n>>c;
    int sum,product=1;
    
    if(c==1){
        cout<<n*(n+1)/2;
    }
    else if(c==2){
        for(int i=1; i<=n; i++){
            product*=i;
        }
        cout<<product;
    }
    else{
        cout<<-1;
    }
}
